        {
            "name": "Xen(Release_Debug)",
            "request": "launch",
            "type": "cppvsdbg",
            "preLaunchTask": "build-Release_Debug",
            
            "windows": {
                "type": "cppvsdbg",
                "program": "${workspaceFolder}/bin/Release_Debug-windows-x86_64/Xen.exe",
